alias g=git

alias _tgz='tar zxf'
alias _tbz='tar jxf'
alias _txz='tar Jxf'
tarz() { tar -cpP "${1%/}" | pv -s $(du -sk "${1%/}" | cut -f1)K | zstd -T0 > "${1%/}.tar.zst"; }
tzs() { tar -cpP "${1%/}" | pv -s $(du -sk "${1%/}" | cut -f1)K | zstd -T0 > "${1%/}.tar.zst"; }
_tzs() { zstd -d -c "$1" | tar xf - ; }

alias getdate='date +%m%d%H%M%Y'
